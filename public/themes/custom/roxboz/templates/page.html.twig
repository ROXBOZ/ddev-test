  </main>

  <footer class="footer">
    <div>
      {% if page.footer %}
        {{ page.footer }}
      {% endif %}
      <p class="footer__copyright">&copy; {{ "now"|date("Y") }} ROXBOZ Drupal Testing</p>
    </div>
  </footer>
</div>
